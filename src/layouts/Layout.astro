---
import '../styles/tailwind.css';

// A propriedade 'title' continua vindo da página que usa o layout
const { title } = Astro.props;
---
<!doctype html>
<html lang="pt-BR" class="h-full bg-gray-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dashboard da Saúde de Atibaia" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Saúde Atibaia</title>
  </head>
  <body class="h-full">
    <div id="app" class="min-h-full">
      
      <!-- Cabeçalho Simples -->
      <header class="bg-white shadow-sm">
        <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
          <h1 class="text-xl font-semibold leading-6 text-gray-900">
            Saúde Atibaia
          </h1>
        </div>
      </header>

      <!-- Área de Conteúdo Principal -->
      <main>
        <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
          <!-- O 'slot' é onde o conteúdo da sua página (ex: dashboard.astro) será inserido -->
          <slot />
        </div>
      </main>

    </div>
  </body>
</html>
